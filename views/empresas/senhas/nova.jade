extends ../../layout

block content
	h1
		a.btn.btn-primary.btn-xs(href="/empresas/#{empresa._id}") Voltar
		| Cadastrar Senha 
		small= empresa.nome

	form.form(method='post', action='/empresas/#{empresa._id}/senhas')
		.form-group
			label Nome
			input.form-control(type='text', name='nome', required)

		.form-group
			label Link
			input.form-control(type='url', name='link', placeholder="http://")

		.form-group
			label Login
			input.form-control(type='text', name='login', required)

		.form-group
			label Senha
			input.form-control(type='text', name='password', required)

		.form-group
			label Tipo
			select.form-control(name='type')
				option(value="Painel de Controle") Painel de Controle
				option(value="Email") Email
				option(value="FTP") FTP

		.form-group
			label Outros
			textarea.form-control(name="outros")

		input.btn.btn-primary(type='submit', value='Cadastrar')
extends layout

block content
	.content
		h1 Empresas 
			a.btn.btn-success.btn-xs(href='/empresas/nova') Nova Empresa

		table.table.table-hover.table-striped
			thead
				tr
					th Empresa
					th Opções
			tbody
				for e in empresas
					tr
						td #{e.nome}
						td
							a.btn.btn-success.btn-xs(href='/empresas/#{e._id}') Ver/Editar
							a.btn.btn-danger.btn-xs.excluir(href='/empresas/#{e._id}/excluir') Excluir

